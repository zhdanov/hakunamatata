{
  "name": "hakunamatata",
  "description": "Component explorer",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhdanov/hakunamatata.git"
  },
  "keywords": [
    "bem",
    "mustache",
    "autodocs",
    "autotests",
    "library",
    "showcase",
    "component explorer"
  ],
  "author": "Yuriy Zhdanov <yuriy.zhdanov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "mustache": "^4.1.0"
  },
  "scripts": {
    "clean": "rimraf .babel-in",
    "init-modules": "./build/build.bash",
    "babel": "./build/build__babel-in.bash && npx babel --delete-dir-on-start --out-dir .babel-out .babel-in",
    "uglify": "npx uglifyjs-folder .babel-out -o h.min.js",
    "build:js": "run-s clean && run-s babel && run-s init-modules && run-s uglify",
    "stylelint": "./build/build__stylelint.bash",
    "concat-css": "./build/build__concat-css.bash",
    "build:css": "npm run stylelint && run-s concat-css",
    "build": "run-s build:*",
    "test": "node test/test.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "beautify": "0.0.8",
    "concat-cli": "^4.0.0",
    "git-diff": "^2.0.6",
    "html-minifier": "^4.0.0",
    "jquery": "^3.5.1",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.11.0",
    "stylelint-config-standard": "^20.0.0",
    "uglifyjs-folder": "^2.0.0"
  }
}
