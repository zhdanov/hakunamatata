{
  "name": "hakunamatata",
  "description": "Component explorer",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhdanov/hakunamatata.git"
  },
  "keywords": [
    "bem",
    "mustache",
    "autodocs",
    "autotests",
    "library",
    "showcase",
    "component explorer"
  ],
  "author": "Yuriy Zhdanov <yuriy.zhdanov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "mustache": "^4.1.0"
  },
  "scripts": {
    "clean": "rimraf .babel-blocks",
    "init-modules": "./build/build.bash",
    "babel": "npx babel --out-dir .babel-blocks hakunamatata.js common.blocks common.bundles",
    "uglify": "npx uglifyjs-folder .babel-blocks -o h.min.js",
    "build:js": "run-s clean && run-s babel && run-s init-modules && run-s uglify",
    "build": "run-s build:*",
    "test": "node tests/tests.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "beautify": "0.0.8",
    "html-minifier": "^4.0.0",
    "jquery": "^3.5.1",
    "jsdom": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "uglifyjs-folder": "^2.0.0"
  }
}
